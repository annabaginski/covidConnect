                <br>

                <div class="block p-6 rounded-lg shadow-lg bg-white self-center w-full">
                <form action="/initial" method="POST">
                    <h5 class="text-base font-bold leading-7 text-gray-900 sm:text-xl sm:truncate sm:tracking-tight">Personal Information</h5>
                    <br>
                    <div class="mb-3">
                    <label for="fullname" class="mb-3 block text-base font-medium">Full Name:</label>
                    <input type="text" name="fullname" id="fullname" class="form-control block
                    w-full
                    px-3
                    py-1.5
                    text-base
                    font-normal
                    text-gray-700
                    bg-white bg-clip-padding
                    border border-solid border-gray-300
                    rounded
                    transition
                    ease-in-out
                    m-0
                    focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none" required>
                    </div>
                    <div class="mb-3">
                        <label for="dob" class="mb-3 block text-base font-medium">Date of Birth:</label>
                        <input type="date" name="dob" id="dob" class="w-full rounded-md border border-solid border-gray-300 bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none" required>
                    </div>
                    <div class="mb-3">
                        <label for="phone" class="mb-3 block text-base font-medium">Phone Number:</label>
                        <input type="tel" name="phone" id="phone" class="form-control block
                        w-full
                        px-3
                        py-1.5
                        text-base
                        font-normal
                        text-gray-700
                        bg-white bg-clip-padding
                        border border-solid border-gray-300
                        rounded
                        transition
                        ease-in-out
                        m-0
                        focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none" required>
                    </div>
                    <br>
                    <div class="mb-3">
                        <label for="prefcontact" class="mb-3 inline text-base font-medium">Preferred Method of Contact:</label>
                        <select name="prefcontact" id="prefcontact">
                            <option value="email">Email</option>
                            <option value="call">Phone - Call</option>
                            <option value="text">Phone - Text</option>
                        </select>
                    </div>
                    <br>
                        <h5 class="text-sm font-bold leading-7 text-gray-900 sm:text-lg sm:truncate sm:tracking-tight">Current Symptoms:</h5>
                    <div class="mb-3">
                        <label for="startdate" class="">Start of Symptoms</label>
                        <input type="date" name="startdate" id="startdate">
                    </div>
                    <div class="mb-3">
                        <label for="cough" class="">Cough</label>
                        <select name="cough" id="cough">
                            <option value="no">No</option>
                            <option value="yes">Yes</option>
                            <option value="improving">Improving</option>
                        </select>
                    </div>
                    <!-- OR -->
                    <div class="mb-3">
                        <label for="sore">Sore Throat</label>
                        <select name="sore" id="sore">
                            <option value="no">No</option>
                            <option value="yes">Yes</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="sob">Shortness of Breath</label>
                        <select name="sob" id="sob">
                            <option value="no">No</option>
                            <option value="yes">Yes</option>
                            <option value="improving">Improving</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="fever">Fever</label>
                        <select name="fever" id="fever">
                            <option value="no">No</option>
                            <option value="yes">Yes</option>
                            <option value="improving">Improving</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="loss">Loss of Taste/Smell</label>
                        <select name="loss" id="loss">
                            <option value="no">No</option>
                            <option value="yes">Yes</option>
                            <option value="improving">Improving</option>
                        </select>
                    </div>
<br>
<div>
    <button type="reset">Reset</button>
                    <button type="submit">Submit</button>
                </div>

                  </form>
                </div>
            </section>
        </div>
    </main>

